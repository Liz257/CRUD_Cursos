@page
@model CRUD_Cursos.Pages.Cursos.DeleteModel

@{
    ViewData["Title"] = "Delete";
}


<div class="card shadow-sm mt-4 border-danger">
    <div class="card-header bg-danger text-white">
        <h4><i class="fas fa-trash-alt me-2"></i>Confirmar Eliminación</h4>
    </div>
    <div class="card-body">
        <h5 class="text-danger mb-4">
            <i class="fas fa-exclamation-triangle me-2"></i>¿Estás seguro de eliminar este curso?
        </h5>
        
        <div class="alert alert-warning">
            <i class="fas fa-info-circle me-2"></i>Esta acción no se puede deshacer.
        </div>

        <dl class="row">
            <dt class="col-sm-3">Nombre:</dt>
            <dd class="col-sm-9">@Model.Curso.Nombre</dd>

            <dt class="col-sm-3">Código:</dt>
            <dd class="col-sm-9">@Model.Curso.Codigo</dd>

            <dt class="col-sm-3">Cupo:</dt>
            <dd class="col-sm-9">@Model.Curso.Cupo</dd>
        </dl>
        <form method="post" class="mt-4">
            <input type="hidden" asp-for="Curso.Id" />
            <div class="d-flex justify-content-between">
                <a asp-page="./Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Cancelar
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash-alt me-1"></i> Confirmar Eliminación
                </button>
            </div>
        </form>
    </div>
   
</div>
