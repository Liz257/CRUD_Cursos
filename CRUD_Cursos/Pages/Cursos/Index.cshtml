@page
@model CRUD_Cursos.Pages.Cursos.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Cursos</h2>

<a asp-page="Create" class="btn btn-primary">
    <i class="fas fa-plus"></i> Nuevo Curso
</a>


<table class="table table-striped table-hover mt-4">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Curso[0].Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Curso[0].Codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Curso[0].Cupo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Curso) {
        <tr>
            <td> @Html.DisplayFor(modelItem => item.Nombre)</td>
            <td> @Html.DisplayFor(modelItem => item.Codigo)</td>
            <td> @Html.DisplayFor(modelItem => item.Cupo)</td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-2">
                        <i class="fas fa-edit"></i> Editar
                </a>
                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white me-2">
                        <i class="fas fa-eye"></i> Detalles
                </a>
                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger me-2">
                        <i class="fas fa-trash"></i> Eliminar
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
