@page
@model CRUD_Cursos.Pages.Cursos.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="card shadow-sm mt-4">
    <div class="card-header bg-primary text-white">
        <h4><i class="fas fa-plus-circle me-2">Crear Nuevo Curso</i></h4>
    </div>
    <div class="card-body">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="mb-3">
                <label asp-for="Curso.Nombre" class="form-label fw-bold">
                    <i class="fas fa-book me-1"></i>Nombre del Curso <span class="text-danger">*</span>
                </label>
                <input asp-for="Curso.Nombre" class="form-control" />
                <span asp-validation-for="Curso.Nombre" class="text-danger small"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Curso.Codigo" class="form-label fw-bold">
                    <i class="fas fa-barcode me-1"></i>Código del Curso<span class="text-danger">*</span>
                </label>
                <input asp-for="Curso.Codigo" class="form-control" placeholder="Ej: MSOF-2025"/>
                <span asp-validation-for="Curso.Codigo" class="text-danger small"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Curso.Cupo" class="form-label fw-bold">
                    <i class="fas fa-users me-1"></i>Cupo Máximo
                </label>
                <input asp-for="Curso.Cupo" class="form-control" />
                <span asp-validation-for="Curso.Cupo" class="text-danger small"></span>
            </div>
            <div class="d-flex justify-content-between mt-4">
                <a asp-page="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Volver al Listado
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-1"></i> Guardar Curso
                </button>
            </div>
        </form>
    </div> 
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
