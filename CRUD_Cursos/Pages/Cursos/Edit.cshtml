@page
@model CRUD_Cursos.Pages.Cursos.EditModel

@{
    ViewData["Title"] = "Edit";
}

    <div class="card shadow-sm mt-4">
    <div class="card-header bg-warning text-white">
        <h4><i class="fas fa-edit me-2"></i>Editar Curso</h4>
    </div>
    <div class="card-body">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <input type="hidden" asp-for="Curso.Id" />
            <div class="mb-3">
                <label asp-for="Curso.Nombre" class="form-label fw-bold">
                    <i class="fas fa-book me-1"></i>Nombre del Curso <span class="text-danger">*</span>
                </label>
                <input asp-for="Curso.Nombre" class="form-control" />
                <span asp-validation-for="Curso.Nombre" class="text-danger small"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Curso.Codigo" class="form-label fw-bold">
                    <i class="fas fa-barcode me-1"></i>Código del Curso <span class="text-danger">*</span>
                </label>
                <input asp-for="Curso.Codigo" class="form-control" placeholder="Ej: MSOF-2025" />
                <span asp-validation-for="Curso.Codigo" class="text-danger small"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Curso.Cupo" class="form-label fw-bold">
                    <i class="fas fa-users me-1"></i>Cupo Máximo
                </label>
                <input asp-for="Curso.Cupo" class="form-control" />
                <span asp-validation-for="Curso.Cupo" class="text-danger small"></span>
            </div>
            <div class="d-flex justify-content-between mt-4">
                <a asp-page="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Cancelar
                </a>
                <button type="submit" class="btn btn-warning text-white">
                    <i class="fas fa-save me-1"></i> Guardar Cambios
                </button>
            </div>
        </form>
    </div>

    </div>
   

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
